# ===========================================
# Hongbao AI - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Required variables are marked with [Required]
# ===========================================

# ===========================================
# Site Configuration
# ===========================================
# [Required] Your production domain URL
NEXT_PUBLIC_SITE_URL=https://your-domain.example.com

# ===========================================
# AI Image Generation (Volcano Engine / 火山引擎)
# https://console.volcengine.com/ark
# ===========================================
# [Required] Volcano Engine Ark API key for Seeddream image generation
ARK_API_KEY=your_ark_api_key

# [Optional] AI model name (default: doubao-seedream-4-0-250828)
# SEEDDREAM_MODEL=doubao-seedream-4-0-250828

# [Optional] Custom system prompt for image generation
# IMAGE_GENERATION_SYSTEM_PROMPT=

# ===========================================
# Supabase Database
# https://app.supabase.com/project/_/settings/api
# ===========================================
# [Required] Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# [Required] Supabase anonymous/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# [Required] Supabase service role key (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# Cloudflare R2 Storage
# https://dash.cloudflare.com/
# ===========================================
# [Required] Cloudflare account ID
R2_ACCOUNT_ID=your_cloudflare_account_id

# [Required] R2 API credentials
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# [Required] R2 bucket name for image storage
R2_BUCKET_NAME=your_bucket_name

# [Required] CDN domain for serving images
R2_CDN_DOMAIN=your_cdn_domain.example.com

# ===========================================
# Clerk Authentication
# https://dashboard.clerk.com/
# ===========================================
# [Required] Clerk publishable key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# [Required] Clerk secret key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# ===========================================
# Stripe Payment
# https://dashboard.stripe.com/apikeys
# ===========================================
# [Required] Stripe secret key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# [Required] Stripe webhook secret for payment verification
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===========================================
# Upstash Redis (Rate Limiting)
# https://console.upstash.com/
# ===========================================
# [Required] Upstash Redis REST API URL
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io

# [Required] Upstash Redis REST API token
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
